<h1>Dashboards</h1>

<div id="dashboards">
  <% @dashboards.each do |dashboard| %>
      <p>
        <div class="dashboard">
          <strong>Nome:</strong>
          <%= link_to dashboard.name, account_dashboard_path(current_account, dashboard) %>
          <%= form_for :session, url: account_dashboard_path(current_account, dashboard), method: :delete do |form| %>
            <p>
            <%= form.submit 'Excluir', class: 'btn btn-primary' %>
            </p>
          <% end %>
        </div>
      </p>
      <% end %>

    <%= link_to "Novo Dashboard", new_account_dashboard_path(current_account), class: 'btn btn-primary btn-lg' %>
</div>