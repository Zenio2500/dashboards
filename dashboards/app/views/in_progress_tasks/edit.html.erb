<% @dashboard = Dashboard.find_by(id: params["dashboard_id"]) %>
<% @in_progress_task = InProgressTask.find_by(id: params["id"]) %>

<div class="row">
    <div class="col-xs-12">
        <h1>Editar 'Tarefa em Progresso'</h1>
    </div>

    <div class="col-md-6 col-md-offset-3 col-xs-12">

        <%= form_with model: [current_account, @dashboard, @in_progress_task] do |form| %>

            <%= render "dashboards/form", f:form %>

            <%= form.submit "Alterar nome", class: "btn btn-primary" %>

        <% end %>

    </div>
</div>

<p></p>

<div id="ld">
    <%= link_to "Voltar ao Dashboard", account_dashboard_path(current_account, @dashboard), class: 'btn btn-primary btn-sm' %>
</div>